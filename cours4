@cliend.message_handler(commands=['start'])
def start(message):
    rmk = types.ReplyKeyboardMarkup(resize_keyboard=True)
    rmk.add(types.KeyboardButton('USD ğŸ‡ºğŸ‡¸'),types.KeyboardButton('ğŸ• Doge ğŸ•'),types.KeyboardButton('EUR ğŸ‡ªğŸ‡º')).add(types.KeyboardButton('JPY ğŸ‡¯ğŸ‡µ'),types.KeyboardButton('KRW ğŸ‡°ğŸ‡·'),types.KeyboardButton('CNY ğŸ‡¨ğŸ‡³')).add(types.KeyboardButton('UAH ğŸ‡ºğŸ‡¦'),types.KeyboardButton('BYN ğŸ‡§ğŸ‡¾'),types.KeyboardButton('KZT ğŸ‡°ğŸ‡¿')).add(types.KeyboardButton('ĞšĞ°Ğ»ÑŒĞºÑƒĞ»ÑÑ‚Ğ¾Ñ€'))

    msg = cliend.send_message(message.chat.id, 'ĞŸĞ¾ÑĞ¼Ğ¾Ñ‚Ñ€ĞµÑ‚ÑŒ ĞºÑƒÑ€Ñ',reply_markup=rmk)
    cliend.register_next_step_handler(msg,courses)

@cliend.message_handler(content_types = ['text'])
def courses(message):
    if message.text == 'USD ğŸ‡ºğŸ‡¸' and count["k"] == 0:
        cours_usd(message)
        cliend.send_message(message.chat.id, key["usd"] + ' RUB')
    elif message.text == 'ğŸ• Doge ğŸ•' and count["k"] == 0:
        cours_doge(message)
        cliend.send_message(message.chat.id, str(round(float(str(key["doge"]).replace(',','.')),2))  + ' USD')
    elif message.text == 'EUR ğŸ‡ªğŸ‡º' and count["k"] == 0:
        cours_eur(message)
        cliend.send_message(message.chat.id, key["eur"] + ' RUB')
    elif message.text == 'JPY ğŸ‡¯ğŸ‡µ' and count["k"] == 0:
        cours_jpy(message)
        cliend.send_message(message.chat.id, key["jpy"] + ' RUB')
    elif message.text == 'KRW ğŸ‡°ğŸ‡·' and count["k"] == 0:
        cours_krw(message)
        cliend.send_message(message.chat.id, key["krw"] + ' RUB')
    elif message.text == 'CNY ğŸ‡¨ğŸ‡³' and count["k"] == 0:
        cours_cny(message)
        cliend.send_message(message.chat.id, key["cny"]+ ' RUB')
    elif message.text == 'UAH ğŸ‡ºğŸ‡¦' and count["k"] == 0:
        cours_uah(message)
        cliend.send_message(message.chat.id, key["uah"] + ' RUB')
    elif message.text == 'BYN ğŸ‡§ğŸ‡¾' and count["k"] == 0:
        cours_byn(message)
        cliend.send_message(message.chat.id, key["byn"] + ' RUB')
    elif message.text == 'KZT ğŸ‡°ğŸ‡¿' and count["k"] == 0:
        cours_kzt(message)
        cliend.send_message(message.chat.id, key["kzt"]+ ' RUB')
    elif message.text == 'Ğ’ĞµÑ€Ğ½ÑƒÑ‚ÑŒÑÑ Ğ½Ğ°Ğ·Ğ°Ğ´':
        start(message)
    elif message.text == 'ĞšĞ°Ğ»ÑŒĞºÑƒĞ»ÑÑ‚Ğ¾Ñ€':
        calculator(message)
    else:
        if count["k"] == 0:
            cliend.send_message(message.chat.id,'ĞŸÑ€Ğ¾ÑÑ‚Ğ¸Ñ‚Ğµ, Ğ½Ğ¾ Ñ‚Ğ°ĞºĞ¾Ğ¹ Ğ²Ñ‹Ğ»ÑÑ‚Ñ‹ Ñƒ Ğ½Ğ°Ñ Ğ½ĞµÑ‚')
            start(message)

def calculator(message):
        rmk = types.ReplyKeyboardMarkup(resize_keyboard=True)
        rmk.add(types.KeyboardButton('USD ğŸ‡ºğŸ‡¸'),types.KeyboardButton('EUR ğŸ‡ªğŸ‡º')).add(types.KeyboardButton('JPY ğŸ‡¯ğŸ‡µ'),types.KeyboardButton('KRW ğŸ‡°ğŸ‡·'),types.KeyboardButton('CNY ğŸ‡¨ğŸ‡³')).add(types.KeyboardButton('UAH ğŸ‡ºğŸ‡¦'),types.KeyboardButton('BYN ğŸ‡§ğŸ‡¾'),types.KeyboardButton('KZT ğŸ‡°ğŸ‡¿')).add(types.KeyboardButton('Ğ’ĞµÑ€Ğ½ÑƒÑ‚ÑŒÑÑ Ğ½Ğ°Ğ·Ğ°Ğ´'))
        msg = cliend.send_message(message.chat.id, 'Ğ’Ñ‹Ğ±ĞµÑ€Ğ¸Ñ‚Ğµ Ğ²Ğ°Ğ»ÑÑ‚Ñƒ', reply_markup=rmk)
        cliend.register_next_step_handler(msg, cours_cl)

@cliend.message_handler(content_types = ['text'])
def cours_cl(message):
    if message.text == 'Ğ’ĞµÑ€Ğ½ÑƒÑ‚ÑŒÑÑ Ğ½Ğ°Ğ·Ğ°Ğ´':
        start(message)
    elif message.text == 'USD ğŸ‡ºğŸ‡¸':
        count["k"] += 1
        cours_usd(message)
        text_cours.append('USD ğŸ‡ºğŸ‡¸')
        allcours.append(key["usd"])
        ch(message)
    elif message.text == 'EUR ğŸ‡ªğŸ‡º':
        count["k"] += 1
        cours_eur(message)
        text_cours.append('EUR ğŸ‡ªğŸ‡º')
        allcours.append(key["eur"])
        ch(message)
    elif message.text == 'JPY ğŸ‡¯ğŸ‡µ':
        count["k"] += 1
        cours_jpy(message)
        text_cours.append('JPY ğŸ‡¯ğŸ‡µ')
        allcours.append(key["jpy"])
        ch(message)
    elif message.text == 'KRW ğŸ‡°ğŸ‡·':
        count["k"] += 1
        cours_krw(message)
        text_cours.append('KRW ğŸ‡°ğŸ‡·')
        allcours.append(key["krw"])
        ch(message)
    elif message.text == 'CNY ğŸ‡¨ğŸ‡³':
        count["k"] += 1
        cours_cny(message)
        text_cours.append('CNY ğŸ‡¨ğŸ‡³')
        allcours.append(key["cny"])
        ch(message)
    elif message.text == 'UAH ğŸ‡ºğŸ‡¦':
        count["k"] += 1
        cours_uah(message)
        text_cours.append('UAH ğŸ‡ºğŸ‡¦')
        allcours.append(key["uah"])
        ch(message)
    elif message.text == 'BYN ğŸ‡§ğŸ‡¾':
        count["k"] += 1
        cours_byn(message)
        text_cours.append('BYN ğŸ‡§ğŸ‡¾')
        allcours.append(key["byn"])
        ch(message)
    elif message.text == 'KZT ğŸ‡°ğŸ‡¿':
        count["k"] += 1
        cours_kzt(message)
        text_cours.append('KZT ğŸ‡°ğŸ‡¿')
        allcours.append(key["kzt"])
        ch(message)
    else:
        cliend.send_message(message.chat.id, 'ĞŸÑ€Ğ¾ÑÑ‚Ğ¸Ñ‚Ğµ, Ğ½Ğ¾ Ñ‚Ğ°ĞºĞ¾Ğ¹ Ğ²Ñ‹Ğ»ÑÑ‚Ñ‹ Ñƒ Ğ½Ğ°Ñ Ğ½ĞµÑ‚')
        calculator(message)
def ch(message):
    rmk = types.ReplyKeyboardMarkup(resize_keyboard=True)
    rmk.add(types.KeyboardButton('Ğ’ĞµÑ€Ğ½ÑƒÑ‚ÑŒÑÑ Ğ½Ğ°Ğ·Ğ°Ğ´'))
    msg = cliend.send_message(message.chat.id, 'ĞĞ°Ğ¿Ğ¸ÑˆĞ¸Ñ‚Ğµ ĞºĞ¾Ğ»Ğ¸Ñ‡ĞµÑÑ‚Ğ²Ğ¾ Ğ²Ğ°Ğ»ÑÑ‚Ñ‹', reply_markup=rmk)
    cliend.register_next_step_handler(msg, calcul)

def back_calcu(message):
    if message.text == 'Ğ’ĞµÑ€Ğ½ÑƒÑ‚ÑŒÑÑ Ğ½Ğ° Ğ³Ğ»Ğ°Ğ²Ğ½Ğ¾Ğµ Ğ¼ĞµĞ½Ñ':
        start(message)
    elif message.text == 'ĞšĞ°Ğ»ÑŒĞºÑƒĞ»ÑÑ‚Ğ¾Ñ€':
        calculator(message)
    elif message.text == '/start':
        start(message)
    else:
        cliend.send_message(message.chat.id, 'Ğ¢Ğ°ĞºĞ¾Ğ¹ ĞºĞ¾Ğ¼Ğ°Ğ½Ğ´Ñ‹ Ğ½Ğµ ÑÑƒÑ‰ĞµÑÑ‚Ğ²ÑƒĞµÑ‚')

def number(str):
    try:
        float(str)
        return True
    except ValueError:
        return False

def calcul(message):
    c,u = [],[]
    num = message.text
    if num.count(',') == 1:
        num = num.replace(',','.')
    if num == 'Ğ’ĞµÑ€Ğ½ÑƒÑ‚ÑŒÑÑ Ğ½Ğ°Ğ·Ğ°Ğ´':
        calculator(message)

        text_cours.clear()
        allcours.clear()

        c.clear()
        u.clear()
    elif num.isdigit() == True or number(num) == True:
        rmk = types.ReplyKeyboardMarkup(resize_keyboard=True)
        rmk.add(types.KeyboardButton('ĞšĞ°Ğ»ÑŒĞºÑƒĞ»ÑÑ‚Ğ¾Ñ€'),types.KeyboardButton('Ğ’ĞµÑ€Ğ½ÑƒÑ‚ÑŒÑÑ Ğ½Ğ° Ğ³Ğ»Ğ°Ğ²Ğ½Ğ¾Ğµ Ğ¼ĞµĞ½Ñ'))

        c.append(float(num))
        u.append(float("".join(allcours[-1])))
        su = c[-1] * u[-1]

        textc = "".join(text_cours[-1])
        msg = cliend.send_message(message.chat.id, num + ' ' + textc + ' = ' + str(su) + ' RUB', reply_markup=rmk)
        cliend.register_next_step_handler(msg, back_calcu)

        text_cours.clear()
        allcours.clear()

        c.clear()
        u.clear()
    elif  num.isdigit() == False:
        cliend.send_message(message.chat.id, 'ĞŸĞ¾Ğ¶Ğ°Ğ»ÑƒĞ¹ÑÑ‚Ğ°,Ğ²Ğ²ĞµĞ´Ğ¸Ñ‚Ğµ Ñ‡Ğ¸ÑĞ»Ğ¾')
        ch(message)
    else:
        cliend.send_message(message.chat.id, 'Ğ¢Ğ°ĞºĞ¾Ğ¹ ĞºĞ¾Ğ¼Ğ°Ğ½Ğ´Ñ‹ Ğ½Ğµ ÑÑƒÑ‰ĞµÑÑ‚Ğ²ÑƒĞµÑ‚')
    count["k"] = 0
def cours_usd(message):
    url = 'https://www.google.com/search?q=%D0%B4%D0%BE%D0%BB%D0%BB%D0%B0%D1%80+%D0%BA+%D1%80%D1%83%D0%B1%D0%BB%D1%8E&oq=%D0%B4%D0%BE%D0%BB%D0%BB%D0%B0%D1%80+%D0%BA+%D1%80%D1%83%D0%B1%D0%BB%D1%8E&aqs=chrome..69i57j0l3j0i131i433j0l5.12290j1j7&sourceid=chrome&ie=UTF-8'
    res = requests.get(url,headers=headers)
    soup = BeautifulSoup(res.text, 'lxml')
    usd_post = soup.find('input', class_='a61j6 vk_gy vk_sh Hg3mWc').get('value')
    key["usd"] = usd_post

def cours_doge(message):
    url = 'https://ru.investing.com/crypto/dogecoin'
    res = requests.get(url,headers=headers)
    soup = BeautifulSoup(res.text, 'lxml')
    doge_post = soup.find('span',class_='pid-1061477-last').get_text(strip=True)
    key["doge"] = doge_post

